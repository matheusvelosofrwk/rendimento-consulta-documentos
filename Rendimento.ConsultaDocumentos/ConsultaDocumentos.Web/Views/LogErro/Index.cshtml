@model IEnumerable<ConsultaDocumentos.Web.Models.LogErroViewModel>

@{
    ViewData["Title"] = "Logs de Erro";
}

<h1>Logs de Erro</h1>

<p class="text-muted">Visualização de logs de erros e exceções do sistema (somente leitura)</p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Data/Hora</th>
            <th>Aplicação</th>
            <th>Método</th>
            <th>Erro</th>
            <th>Usuário</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@(item.Aplicacao ?? "-")</td>
                    <td>@(item.Metodo ?? "-")</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.Erro))
                        {
                            var resumo = item.Erro.Length > 100 ? item.Erro.Substring(0, 97) + "..." : item.Erro;
                            <span title="@item.Erro">@resumo</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@(item.Usuario ?? "-")</td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Nenhum log encontrado</td>
            </tr>
        }
    </tbody>
</table>
