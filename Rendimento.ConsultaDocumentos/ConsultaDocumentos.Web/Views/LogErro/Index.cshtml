@model IEnumerable<ConsultaDocumentos.Web.Models.LogErroViewModel>

@{
    ViewData["Title"] = "Logs de Erro";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-exclamation-triangle"></i> Logs de Erro</h1>
            <p>Visualização de logs de erros (somente leitura)</p>
        </div>
    </div>
</div>

<!-- Card de Filtros -->
<div class="card-modern fade-in mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-filter"></i> Filtros
        </h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" id="filtrosForm">
            <div class="row g-3">
                <!-- Data Início -->
                <div class="col-md-3">
                    <label for="DataInicio" class="form-label">
                        <i class="fas fa-calendar-alt me-1"></i>Data Início
                    </label>
                    <input type="date"
                           class="form-control"
                           id="DataInicio"
                           name="DataInicio"
                           value="@Context.Request.Query["DataInicio"]" />
                </div>

                <!-- Data Fim -->
                <div class="col-md-3">
                    <label for="DataFim" class="form-label">
                        <i class="fas fa-calendar-alt me-1"></i>Data Fim
                    </label>
                    <input type="date"
                           class="form-control"
                           id="DataFim"
                           name="DataFim"
                           value="@Context.Request.Query["DataFim"]" />
                </div>

                <!-- Número Documento -->
                <div class="col-md-3">
                    <label for="NumeroDocumento" class="form-label">
                        <i class="fas fa-file-alt me-1"></i>Número Documento
                    </label>
                    <input type="text"
                           class="form-control"
                           id="NumeroDocumento"
                           name="NumeroDocumento"
                           placeholder="CPF ou CNPJ"
                           value="@Context.Request.Query["NumeroDocumento"]" />
                </div>

                <!-- Aplicação -->
                <div class="col-md-3">
                    <label for="AplicacaoProvedorId" class="form-label">
                        <i class="fas fa-desktop me-1"></i>Aplicação
                    </label>
                    <select class="form-select"
                            id="AplicacaoProvedorId"
                            name="AplicacaoProvedorId">
                        <option value="">Todas</option>
                        @if (ViewBag.Aplicacoes != null)
                        {
                            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Aplicacoes)
                            {
                                <option value="@item.Value"
                                        selected="@(Context.Request.Query["AplicacaoProvedorId"] == item.Value)">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>

                <!-- Tipo Documento -->
                <div class="col-md-3">
                    <label for="TipoDocumento" class="form-label">
                        <i class="fas fa-id-card me-1"></i>Tipo Documento
                    </label>
                    <select class="form-select"
                            id="TipoDocumento"
                            name="TipoDocumento">
                        <option value="">Todos</option>
                        @if (ViewBag.TiposDocumento != null)
                        {
                            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.TiposDocumento)
                            {
                                <option value="@item.Value"
                                        selected="@(Context.Request.Query["TipoDocumento"] == item.Value)">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>

                <!-- Botões -->
                <div class="col-md-9 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary-modern btn-modern btn-icon me-2">
                        <i class="fas fa-search"></i>
                        <span>Filtrar</span>
                    </button>
                    <button type="button" class="btn btn-secondary btn-modern btn-icon" onclick="limparFiltros()">
                        <i class="fas fa-eraser"></i>
                        <span>Limpar Filtros</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Card com Tabela -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Histórico de Erros
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table id="errosTable" class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-clock me-1"></i>
                                Data/Hora
                            </th>
                            <th>
                                <i class="fas fa-desktop me-1"></i>
                                Aplicação
                            </th>
                            <th>
                                <i class="fas fa-code me-1"></i>
                                Método
                            </th>
                            <th style="min-width: 300px;">
                                <i class="fas fa-bug me-1"></i>
                                Erro
                            </th>
                            <th>
                                <i class="fas fa-user me-1"></i>
                                Usuário
                            </th>
                            <th class="text-center" style="width: 100px;">
                                <i class="fas fa-cog me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <small>@item.DataHora.ToString("dd/MM/yyyy")</small><br/>
                                    <strong>@item.DataHora.ToString("HH:mm:ss")</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Aplicacao))
                                    {
                                        <span class="badge badge-modern bg-danger">
                                            @item.Aplicacao
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Metodo))
                                    {
                                        <code class="text-primary" style="font-size: 0.85rem;">@item.Metodo</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Erro))
                                    {
                                        var resumo = item.Erro.Length > 100 ? item.Erro.Substring(0, 97) + "..." : item.Erro;
                                        <span class="text-danger"
                                              data-bs-toggle="tooltip"
                                              data-bs-placement="top"
                                              title="@item.Erro"
                                              style="cursor: help;">
                                            <i class="fas fa-exclamation-circle me-1"></i>@resumo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Usuario))
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar me-2" style="width: 28px; height: 28px; font-size: 0.75rem; background-color: #dc3545;">
                                                @(item.Usuario?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <span>@item.Usuario</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons justify-content-center">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn-action danger"
                                           data-bs-toggle="tooltip"
                                           title="Ver Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-check-circle text-success"></i>
                </div>
                <h3>Nenhum erro registrado</h3>
                <p>Ótimo! Não há erros registrados no sistema</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            if ($('#errosTable').length) {
                initDataTable('#errosTable', {
                    order: [[0, 'desc']], // Ordenar por data decrescente
                    columnDefs: [
                        { orderable: false, targets: -1 } // Desabilitar ordenação na coluna de ações
                    ]
                });
            }

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function limparFiltros() {
            // Limpar todos os campos do formulário
            document.getElementById('DataInicio').value = '';
            document.getElementById('DataFim').value = '';
            document.getElementById('NumeroDocumento').value = '';
            document.getElementById('AplicacaoProvedorId').selectedIndex = 0;
            document.getElementById('TipoDocumento').selectedIndex = 0;

            // Submeter o formulário para recarregar sem filtros
            document.getElementById('filtrosForm').submit();
        }
    </script>
}
