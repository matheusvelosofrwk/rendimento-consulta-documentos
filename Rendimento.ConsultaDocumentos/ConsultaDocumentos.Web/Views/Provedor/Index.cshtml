@model IEnumerable<ConsultaDocumentos.Web.Models.ProvedorViewModel>

@{
    ViewData["Title"] = "Provedores";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-server"></i> Provedores</h1>
            <p>Gerencie os provedores de consulta de documentos</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon">
                <i class="fas fa-plus"></i>
                <span>Novo Provedor</span>
            </a>
        </div>
    </div>
</div>

<!-- Card com Tabela -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Lista de Provedores
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            @Html.AntiForgeryToken()
            <div class="table-responsive">
                <table id="provedoresTable" class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-tag me-1"></i>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                <i class="fas fa-info-circle me-1"></i>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                <i class="fas fa-link me-1"></i>
                                @Html.DisplayNameFor(model => model.EndpointUrl)
                            </th>
                            <th>
                                <i class="fas fa-sort-amount-up me-1"></i>
                                @Html.DisplayNameFor(model => model.Prioridade)
                            </th>
                            <th>
                                <i class="fas fa-toggle-on me-1"></i>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th class="text-center" style="width: 120px;">
                                <i class="fas fa-cog me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.875rem;">
                                            @(item.Nome?.Substring(0, 1).ToUpper() ?? "P")
                                        </div>
                                        <strong>@Html.DisplayFor(modelItem => item.Nome)</strong>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.EndpointUrl)</small>
                                </td>
                                <td>
                                    <span class="badge badge-modern bg-info">
                                        @Html.DisplayFor(modelItem => item.Prioridade)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-modern bg-success">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn-action edit"
                                           data-bs-toggle="tooltip"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="openDeleteConfirmation('@item.Id', 'Provedor', '@item.Nome')"
                                                class="btn-action delete"
                                                data-bs-toggle="tooltip"
                                                title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-server"></i>
                </div>
                <h3>Nenhum provedor cadastrado</h3>
                <p>Comece adicionando seu primeiro provedor de consulta ao sistema</p>
                <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon mt-3">
                    <i class="fas fa-plus"></i>
                    <span>Cadastrar Primeiro Provedor</span>
                </a>
            </div>
        }
    </div>
</div>

@* Modal de confirmação de exclusão *@
@await Html.PartialAsync("_DeleteConfirmationModal")

@section Scripts {
    <script src="~/js/delete-helper.js"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            if ($('#provedoresTable').length) {
                initDataTable('#provedoresTable', {
                    order: [[3, 'asc']], // Ordenar por prioridade
                    columnDefs: [
                        { orderable: false, targets: -1 } // Desabilitar ordenação na coluna de ações
                    ]
                });
            }

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
