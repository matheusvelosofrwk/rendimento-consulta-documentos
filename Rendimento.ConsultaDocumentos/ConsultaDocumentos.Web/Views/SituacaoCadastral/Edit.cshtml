@model ConsultaDocumentos.Web.Models.SituacaoCadastralViewModel

@{
    ViewData["Title"] = "Editar Situação Cadastral";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-edit"></i> Editar Situação Cadastral</h1>
            <p>Atualize os dados da situação cadastral @Model.Descricao</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary btn-icon">
                <i class="fas fa-arrow-left"></i>
                <span>Voltar</span>
            </a>
        </div>
    </div>
</div>

<!-- Form Card -->
<div class="row justify-content-center fade-in">
    <div class="col-lg-8">
        <div class="card-modern">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle"></i> Dados da Situação Cadastral
                </h5>
            </div>
            <div class="card-body" style="padding: 2rem;">
                <form asp-action="Edit" method="post" class="form-modern">
                    <div asp-validation-summary="ModelOnly" class="alert alert-modern alert-danger mb-4"></div>

                    <input type="hidden" asp-for="Id" />

                    <!-- Descrição -->
                    <div class="form-group mb-4">
                        <label asp-for="Descricao" class="form-label">
                            <i class="fas fa-info-circle text-primary me-2"></i>Descrição
                        </label>
                        <div class="input-group input-group-modern">
                            <span class="input-group-text">
                                <i class="fas fa-file-alt"></i>
                            </span>
                            <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição da situação cadastral" />
                        </div>
                        <span asp-validation-for="Descricao" class="text-danger small"></span>
                    </div>

                    <!-- Ativo -->
                    <div class="form-group mb-4">
                        <label class="form-label">
                            <i class="fas fa-toggle-on text-primary me-2"></i>Status
                        </label>
                        <div class="form-check form-switch" style="padding-left: 2.5rem;">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" role="switch" style="width: 3rem; height: 1.5rem; cursor: pointer;" />
                            <label class="form-check-label" asp-for="Ativo" style="margin-left: 0.5rem; cursor: pointer;">
                                Ativo
                            </label>
                        </div>
                        <span asp-validation-for="Ativo" class="text-danger small"></span>
                    </div>

                    <div class="divider my-4"></div>

                    <!-- Botões de Ação -->
                    <div class="d-flex gap-3 justify-content-between">
                        <button type="button" onclick="openDeleteConfirmation('@Model.Id', 'SituacaoCadastral', '@Model.Descricao')" class="btn btn-danger btn-modern btn-icon">
                            <i class="fas fa-trash-alt"></i>
                            <span>Excluir Situação Cadastral</span>
                        </button>
                        <div class="d-flex gap-3">
                            <a asp-action="Index" class="btn btn-secondary btn-modern btn-icon">
                                <i class="fas fa-times"></i>
                                <span>Cancelar</span>
                            </a>
                            <button type="submit" class="btn btn-primary-modern btn-modern btn-icon">
                                <i class="fas fa-save"></i>
                                <span>Salvar Alterações</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Informações Adicionais -->
        <div class="alert alert-modern alert-warning mt-4">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Atenção:</strong> As alterações serão aplicadas imediatamente após salvar.
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@* Modal de confirmação de exclusão *@
@await Html.PartialAsync("_DeleteConfirmationModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/delete-helper.js"></script>
    <script>
        $(document).ready(function() {
            // Focar no primeiro campo
            $('input[name="Descricao"]').focus();

            // Animação ao submeter
            $('form').on('submit', function() {
                if ($(this).valid()) {
                    showLoading();
                }
            });
        });
    </script>
}
