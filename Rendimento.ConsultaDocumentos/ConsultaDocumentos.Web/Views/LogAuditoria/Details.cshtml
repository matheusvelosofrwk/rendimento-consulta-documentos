@model ConsultaDocumentos.Web.Models.LogAuditoriaViewModel

@{
    ViewData["Title"] = "Detalhes do Log de Auditoria";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-info-circle"></i> Detalhes do Log</h1>
            <p>Informações completas do log de auditoria</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary btn-modern btn-icon">
                <i class="fas fa-arrow-left"></i>
                <span>Voltar</span>
            </a>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Informações Gerais -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-info-circle"></i> Informações Gerais
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-fingerprint me-1"></i> ID
                    </dt>
                    <dd class="col-sm-7">
                        <span class="badge badge-modern bg-secondary">@Model.Id</span>
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-clock me-1"></i> Data/Hora
                    </dt>
                    <dd class="col-sm-7">
                        <strong>@Model.DataHoraConsulta.ToString("dd/MM/yyyy HH:mm:ss")</strong>
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-desktop me-1"></i> Aplicação
                    </dt>
                    <dd class="col-sm-7">
                        <span class="badge badge-modern bg-primary">@Model.NomeAplicacao</span>
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-id-card me-1"></i> Documento
                    </dt>
                    <dd class="col-sm-7">
                        <strong>@Model.DocumentoNumero</strong>
                        <br/>
                        <small class="text-muted">(@Model.TipoDocumento)</small>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-check-circle me-1"></i> Status
                    </dt>
                    <dd class="col-sm-7">
                        @if (Model.ConsultaSucesso)
                        {
                            <span class="badge badge-modern bg-success">
                                <i class="fas fa-check me-1"></i>Sucesso
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-modern bg-danger">
                                <i class="fas fa-times me-1"></i>Falha
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-tachometer-alt me-1"></i> Tempo
                    </dt>
                    <dd class="col-sm-7">
                        <span class="badge badge-modern bg-info">@Model.TempoProcessamentoMs ms</span>
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-database me-1"></i> Origem
                    </dt>
                    <dd class="col-sm-7">
                        @if (Model.OrigemCache)
                        {
                            <span class="badge badge-modern bg-info">
                                <i class="fas fa-database me-1"></i>Cache
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-modern bg-secondary">
                                <i class="fas fa-cloud me-1"></i>API
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-server me-1"></i> Provedor
                    </dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrWhiteSpace(Model.ProvedorPrincipal))
                        {
                            <span class="badge badge-modern bg-success">@Model.ProvedorPrincipal</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.ProvedoresUtilizados))
        {
            <hr class="my-3" />
            <div class="row">
                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-list me-1"></i> Provedores Utilizados
                </dt>
                <dd class="col-sm-9">
                    <pre class="bg-light p-3 rounded border" style="font-size: 0.85rem; margin-bottom: 0;">@Model.ProvedoresUtilizados</pre>
                </dd>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.MensagemRetorno))
        {
            <hr class="my-3" />
            <div class="row">
                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-comment me-1"></i> Mensagem
                </dt>
                <dd class="col-sm-9">
                    <div class="alert alert-info alert-modern mb-0">
                        @Model.MensagemRetorno
                    </div>
                </dd>
            </div>
        }
    </div>
</div>

<!-- Parâmetros de Entrada -->
@if (!string.IsNullOrWhiteSpace(Model.ParametrosEntrada))
{
    <div class="card-modern fade-in mt-3">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-sign-in-alt"></i> Parâmetros de Entrada
            </h5>
        </div>
        <div class="card-body">
            <pre class="bg-light p-3 rounded border" style="max-height: 400px; overflow-y: auto; font-size: 0.85rem; margin-bottom: 0;"><code class="language-json">@Model.ParametrosEntrada</code></pre>
        </div>
    </div>
}

<!-- Resposta do Provedor -->
@if (!string.IsNullOrWhiteSpace(Model.RespostaProvedor))
{
    <div class="card-modern fade-in mt-3">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-reply"></i> Resposta do Provedor
            </h5>
        </div>
        <div class="card-body">
            <pre class="bg-light p-3 rounded border" style="max-height: 500px; overflow-y: auto; font-size: 0.85rem; margin-bottom: 0;"><code class="language-json">@Model.RespostaProvedor</code></pre>
        </div>
    </div>
}

<!-- Informações Técnicas -->
<div class="card-modern fade-in mt-3">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-cog"></i> Informações Técnicas
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-network-wired me-1"></i> Endereço IP
                    </dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrWhiteSpace(Model.EnderecoIp))
                        {
                            <span class="badge badge-modern bg-dark">@Model.EnderecoIp</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">
                        <i class="fas fa-browser me-1"></i> User Agent
                    </dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrWhiteSpace(Model.UserAgent))
                        {
                            <small class="text-muted">@Model.UserAgent</small>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.InformacoesAdicionais))
        {
            <hr class="my-3" />
            <div class="row">
                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-plus-circle me-1"></i> Informações Adicionais
                </dt>
                <dd class="col-sm-9">
                    <pre class="bg-light p-3 rounded border" style="font-size: 0.85rem; margin-bottom: 0;"><code>@Model.InformacoesAdicionais</code></pre>
                </dd>
            </div>
        }
    </div>
</div>
