@model IEnumerable<ConsultaDocumentos.Web.Models.LogAuditoriaViewModel>

@{
    ViewData["Title"] = "Logs de Auditoria";
}

<h1>Logs de Auditoria</h1>

<p class="text-muted">Visualização de logs de auditoria de consultas de documentos (somente leitura)</p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Data/Hora</th>
            <th>Aplicação</th>
            <th>Documento</th>
            <th>Tipo</th>
            <th>Provedor</th>
            <th>Sucesso</th>
            <th>Tempo (ms)</th>
            <th>Cache</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr class="@(item.ConsultaSucesso ? "" : "table-danger")">
                    <td>@item.DataHoraConsulta.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@item.NomeAplicacao</td>
                    <td>@item.DocumentoNumero</td>
                    <td>@item.TipoDocumento</td>
                    <td>@(item.ProvedorPrincipal ?? "-")</td>
                    <td>
                        @if (item.ConsultaSucesso)
                        {
                            <span class="badge bg-success">Sucesso</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Falha</span>
                        }
                    </td>
                    <td>@item.TempoProcessamentoMs</td>
                    <td>
                        @if (item.OrigemCache)
                        {
                            <span class="badge bg-info">Cache</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">API</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">Nenhum log encontrado</td>
            </tr>
        }
    </tbody>
</table>
