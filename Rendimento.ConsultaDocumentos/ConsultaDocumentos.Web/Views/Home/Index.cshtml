@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <h1><i class="fas fa-th-large"></i> Dashboard</h1>
    <p>Bem-vindo ao sistema de consulta de documentos</p>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4 fade-in">
    <div class="col-xl-3 col-md-6">
        <div class="card-modern card-stats primary">
            <div class="card-body stats-card">
                <div class="stats-card-icon primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-card-value">-</div>
                <div class="stats-card-label">Total de Clientes</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card-modern card-stats success">
            <div class="card-body stats-card">
                <div class="stats-card-icon success">
                    <i class="fas fa-search"></i>
                </div>
                <div class="stats-card-value">-</div>
                <div class="stats-card-label">Consultas Hoje</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card-modern card-stats warning">
            <div class="card-body stats-card">
                <div class="stats-card-icon warning">
                    <i class="fas fa-server"></i>
                </div>
                <div class="stats-card-value">-</div>
                <div class="stats-card-label">Provedores Ativos</div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card-modern card-stats danger">
            <div class="card-body stats-card">
                <div class="stats-card-icon danger">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stats-card-value">-</div>
                <div class="stats-card-label">Erros Hoje</div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card-modern fade-in">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt"></i> Ações Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Documento" asp-action="Consultar" class="btn btn-primary-modern btn-modern w-100 btn-icon">
                            <i class="fas fa-search"></i>
                            <span>Consultar Documento</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Cliente" asp-action="Create" class="btn btn-success w-100 btn-icon">
                            <i class="fas fa-user-plus"></i>
                            <span>Novo Cliente</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Provedor" asp-action="Index" class="btn btn-info w-100 btn-icon">
                            <i class="fas fa-server"></i>
                            <span>Ver Provedores</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="LogAuditoria" asp-action="Index" class="btn btn-secondary w-100 btn-icon">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Auditoria</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="LogErro" asp-action="Index" class="btn btn-warning w-100 btn-icon">
                            <i class="fas fa-bug"></i>
                            <span>Log de Erros</span>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="User" asp-action="Index" class="btn btn-danger w-100 btn-icon">
                            <i class="fas fa-user-shield"></i>
                            <span>Usuários</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card-modern fade-in">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informações do Sistema</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success"></i>
                        <strong>Status:</strong> <span class="badge badge-modern bg-success">Online</span>
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-code-branch text-primary"></i>
                        <strong>Versão:</strong> 1.0.0
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-calendar-alt text-info"></i>
                        <strong>Última Atualização:</strong> @DateTime.Now.ToString("dd/MM/yyyy")
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-shield-alt text-warning"></i>
                        <strong>Ambiente:</strong> Produção
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row g-4">
    <div class="col-lg-6">
        <div class="card-modern fade-in">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-history"></i> Atividades Recentes</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-modern alert-info">
                    <i class="fas fa-info-circle"></i> Nenhuma atividade recente para exibir.
                </div>
                <p class="text-muted text-center mb-0">
                    <small>As consultas e atividades aparecerão aqui quando realizadas</small>
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card-modern fade-in">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Estatísticas do Mês</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">CPF Consultados</span>
                        <strong>-</strong>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">CNPJ Consultados</span>
                        <strong>-</strong>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Taxa de Sucesso</span>
                        <strong>-</strong>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="alert alert-modern alert-info mb-0 mt-3">
                    <i class="fas fa-chart-pie"></i> Estatísticas detalhadas em desenvolvimento
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Welcome Section (for non-authenticated users) -->
@if (User.Identity?.IsAuthenticated != true)
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card-modern text-center fade-in" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%); color: white;">
                <div class="card-body" style="padding: 3rem;">
                    <h2 class="mb-3"><i class="fas fa-rocket"></i> Bem-vindo ao Sistema de Consulta de Documentos</h2>
                    <p class="lead mb-4">Consulte CPF e CNPJ de forma rápida e segura</p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Fazer Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus"></i> Criar Conta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
