<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sistema de Consulta de Documentos">
    <title>@ViewData["Title"] - Consulta Documentos</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConsultaDocumentos.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
                <i class="fas fa-file-invoice"></i>
                <span class="sidebar-brand-text">Consulta Docs</span>
            </a>

            <nav class="sidebar-nav">
                <!-- Home -->
                <div class="nav-section">
                    <a asp-controller="Home" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <!-- Cadastros -->
                <div class="nav-section">
                    <div class="nav-section-title">Cadastros</div>
                    <a asp-controller="Cliente" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-users"></i>
                        <span>Clientes</span>
                    </a>
                    <a asp-controller="Provedor" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-server"></i>
                        <span>Provedores</span>
                    </a>
                    <a asp-controller="Aplicacao" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-desktop"></i>
                        <span>Aplicações</span>
                    </a>
                </div>

                <!-- Referências -->
                <div class="nav-section">
                    <div class="nav-section-title">Referências</div>
                    <a asp-controller="Nacionalidade" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-flag"></i>
                        <span>Nacionalidades</span>
                    </a>
                    <a asp-controller="SituacaoCadastral" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-tags"></i>
                        <span>Situações Cadastrais</span>
                    </a>
                </div>

                <!-- Consultas -->
                <div class="nav-section">
                    <div class="nav-section-title">Consultas</div>
                    <a asp-controller="Documento" asp-action="Consultar" class="nav-link-sidebar">
                        <i class="fas fa-search"></i>
                        <span>Consultar Documento</span>
                    </a>
                </div>

                <!-- Configurações -->
                <div class="nav-section">
                    <div class="nav-section-title">Configurações</div>
                    <a asp-controller="AplicacaoProvedor" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-link"></i>
                        <span>Aplicação-Provedor</span>
                    </a>
                </div>

                <!-- Logs & Auditoria -->
                <div class="nav-section">
                    <div class="nav-section-title">Logs & Auditoria</div>
                    <a asp-controller="LogAuditoria" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-clipboard-list"></i>
                        <span>Log de Auditoria</span>
                    </a>
                    <a asp-controller="LogErro" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Log de Erro</span>
                    </a>
                </div>

                <!-- Administração -->
                <div class="nav-section">
                    <div class="nav-section-title">Administração</div>
                    <a asp-controller="User" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-user-shield"></i>
                        <span>Usuários</span>
                    </a>
                    <a asp-controller="Role" asp-action="Index" class="nav-link-sidebar">
                        <i class="fas fa-user-tag"></i>
                        <span>Perfis (Roles)</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <nav class="navbar-top">
                <button class="navbar-toggle" type="button" aria-label="Toggle sidebar">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="navbar-user">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="user-dropdown">
                            <button class="user-dropdown-toggle" type="button">
                                <div class="user-avatar">
                                    @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                </div>
                                <div class="user-info">
                                    <span class="user-name">@User.Identity.Name</span>
                                    <span class="user-role">Usuário</span>
                                </div>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="user-dropdown-menu">
                                <a href="#" class="user-dropdown-item">
                                    <i class="fas fa-user"></i> Meu Perfil
                                </a>
                                <a href="#" class="user-dropdown-item">
                                    <i class="fas fa-cog"></i> Configurações
                                </a>
                                <div class="divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0;">
                                    <button type="submit" class="user-dropdown-item" style="width: 100%; text-align: left; border: none; background: none; cursor: pointer;">
                                        <i class="fas fa-sign-out-alt"></i> Sair
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary-modern btn-modern">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                            Registrar
                        </a>
                    }
                </div>
            </nav>

            <!-- Page Content -->
            <main class="container-main">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer-main">
                <div>
                    &copy; @DateTime.Now.Year - Consulta Documentos -
                    <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
                </div>
                <div style="margin-top: 0.5rem; font-size: 0.75rem;">
                    Desenvolvido com <i class="fas fa-heart" style="color: #e74a3b;"></i> por Rendimento
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
