@model IEnumerable<ConsultaDocumentos.Web.Models.QuadroSocietarioViewModel>

@{
    ViewData["Title"] = "Quadro Societário";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-users-cog"></i> Quadro Societário</h1>
            <p>Gerencie o quadro societário das empresas</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon">
                <i class="fas fa-plus"></i>
                <span>Novo Sócio</span>
            </a>
        </div>
    </div>
</div>

<!-- Card com Tabela -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Lista de Sócios
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            @Html.AntiForgeryToken()
            <div class="table-responsive">
                <table id="sociosTable" class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-id-card me-1"></i>
                                CPF/CNPJ
                            </th>
                            <th>
                                <i class="fas fa-user me-1"></i>
                                Nome
                            </th>
                            <th>
                                <i class="fas fa-certificate me-1"></i>
                                Qualificação
                            </th>
                            <th>
                                <i class="fas fa-tag me-1"></i>
                                Tipo
                            </th>
                            <th>
                                <i class="fas fa-percent me-1"></i>
                                Percentual Capital
                            </th>
                            <th class="text-center" style="width: 120px;">
                                <i class="fas fa-cog me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-modern bg-info">
                                        @item.CpfCnpj
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.875rem;">
                                            @(item.Nome?.Substring(0, 1).ToUpper() ?? "S")
                                        </div>
                                        <strong>@item.Nome</strong>
                                    </div>
                                </td>
                                <td>@item.Qualificacao</td>
                                <td>
                                    @{
                                        var badgeClass = item.Tipo switch
                                        {
                                            "ADMINISTRADOR" => "bg-success",
                                            "PRESIDENTE" => "bg-primary",
                                            "DIRETOR" => "bg-info",
                                            "SOCIO" => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge badge-modern @badgeClass">
                                        @item.Tipo
                                    </span>
                                </td>
                                <td>
                                    <strong>@(item.PercentualCapital?.ToString("N2") ?? "-")%</strong>
                                </td>
                                <td>
                                    <div class="action-buttons justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn-action edit"
                                           data-bs-toggle="tooltip"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="confirmDelete('@item.Id')"
                                                class="btn-action delete"
                                                data-bs-toggle="tooltip"
                                                title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3>Nenhum sócio cadastrado</h3>
                <p>Comece adicionando o primeiro sócio ao quadro societário</p>
                <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon mt-3">
                    <i class="fas fa-plus"></i>
                    <span>Cadastrar Primeiro Sócio</span>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            if ($('#sociosTable').length) {
                initDataTable('#sociosTable', {
                    order: [[1, 'asc']],
                    columnDefs: [
                        { orderable: false, targets: -1 } // Desabilitar ordenação na coluna de ações
                    ]
                });
            }

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Função original de confirmDelete mantida (não usa openDeleteConfirmation)
        function confirmDelete(id) {
            if (confirm('Deseja realmente excluir este sócio?')) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '/QuadroSocietario/DeleteConfirmed';

                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = id;
                form.appendChild(input);

                var token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    form.appendChild(token.cloneNode());
                }

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
