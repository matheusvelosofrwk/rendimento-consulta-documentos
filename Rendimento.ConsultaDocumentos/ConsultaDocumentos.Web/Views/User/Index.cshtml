@model IEnumerable<ConsultaDocumentos.Web.Models.UserViewModel>

@{
    ViewData["Title"] = "Usuários";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-users"></i> Usuários</h1>
            <p>Gerencie os usuários do sistema</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon">
                <i class="fas fa-plus"></i>
                <span>Novo Usuário</span>
            </a>
        </div>
    </div>
</div>

<!-- Alert de Sucesso -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-modern alert-success alert-dismissible fade show fade-in" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Card com Tabela -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Lista de Usuários
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            @Html.AntiForgeryToken()
            <div class="table-responsive">
                <table id="usersTable" class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-envelope me-1"></i>Email
                            </th>
                            <th>
                                <i class="fas fa-shield-check me-1"></i>Perfis
                            </th>
                            <th class="text-center">
                                <i class="fas fa-check-circle me-1"></i>Email Confirmado
                            </th>
                            <th class="text-center" style="width: 180px;">
                                <i class="fas fa-cog me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.875rem;">
                                            @(item.Email?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                        <strong>@item.Email</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Roles != null && item.Roles.Any())
                                    {
                                        foreach (var role in item.Roles)
                                        {
                                            <span class="badge badge-modern bg-info me-1">
                                                <i class="fas fa-tag me-1"></i>@role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-minus-circle me-1"></i>Sem perfis
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.EmailConfirmed)
                                    {
                                        <span class="badge badge-modern bg-success">
                                            <i class="fas fa-check me-1"></i>Sim
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-modern bg-warning">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Não
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn-action edit"
                                           data-bs-toggle="tooltip"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="ManageRoles" asp-route-id="@item.Id"
                                           class="btn-action info"
                                           data-bs-toggle="tooltip"
                                           title="Gerenciar Perfis">
                                            <i class="fas fa-shield-check"></i>
                                        </a>
                                        <button onclick="confirmDelete('@item.Id', '@item.Email')"
                                                class="btn-action delete"
                                                data-bs-toggle="tooltip"
                                                title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Nenhum usuário cadastrado</h3>
                <p>Comece adicionando seu primeiro usuário ao sistema</p>
                <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon mt-3">
                    <i class="fas fa-plus"></i>
                    <span>Cadastrar Primeiro Usuário</span>
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir o usuário <strong id="userEmailToDelete"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            if ($('#usersTable').length) {
                initDataTable('#usersTable', {
                    order: [[0, 'asc']],
                    columnDefs: [
                        { orderable: false, targets: -1 } // Desabilitar ordenação na coluna de ações
                    ]
                });
            }

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function confirmDelete(id, email) {
            document.getElementById('userEmailToDelete').textContent = email;
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("DeleteConfirmed", "User")/' + id;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
