@model IEnumerable<ConsultaDocumentos.Web.Models.AplicacaoProvedorViewModel>

@{
    ViewData["Title"] = "Aplicações e Provedores";
}

<!-- Page Header -->
<div class="page-header fade-in">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-link"></i> Aplicações e Provedores</h1>
            <p>Gerencie o vínculo entre aplicações e provedores</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon">
                <i class="fas fa-plus"></i>
                <span>Novo Vínculo</span>
            </a>
        </div>
    </div>
</div>

<!-- Card com Tabela -->
<div class="card-modern fade-in">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Lista de Vínculos
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            @Html.AntiForgeryToken()
            <div class="table-responsive">
                <table id="aplicacoesProvedoresTable" class="table table-hover table-modern">
                    <thead>
                        <tr>
                            <th>
                                <i class="fas fa-desktop me-1"></i>
                                Aplicação
                            </th>
                            <th>
                                <i class="fas fa-server me-1"></i>
                                Provedor
                            </th>
                            <th>
                                <i class="fas fa-sort me-1"></i>
                                Ordem
                            </th>
                            <th>
                                <i class="fas fa-toggle-on me-1"></i>
                                Status
                            </th>
                            <th>
                                <i class="fas fa-calendar me-1"></i>
                                Data Criação
                            </th>
                            <th class="text-center" style="width: 120px;">
                                <i class="fas fa-cog me-1"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-2" style="width: 32px; height: 32px; font-size: 0.875rem;">
                                            @(item.NomeAplicacao?.Substring(0, 1).ToUpper() ?? "A")
                                        </div>
                                        <strong>@Html.DisplayFor(modelItem => item.NomeAplicacao)</strong>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeProvedor)
                                </td>
                                <td>
                                    <span class="badge badge-modern bg-info">
                                        @Html.DisplayFor(modelItem => item.Ordem)
                                    </span>
                                </td>
                                <td>
                                    @if (item.Status == ConsultaDocumentos.Web.Enums.StatusEnum.Ativo)
                                    {
                                        <span class="badge badge-modern bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-modern bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td>
                                    @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <div class="action-buttons justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn-action edit"
                                           data-bs-toggle="tooltip"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="openDeleteConfirmation('@item.Id', 'AplicacaoProvedor', '@item.NomeAplicacao - @item.NomeProvedor')"
                                                class="btn-action delete"
                                                data-bs-toggle="tooltip"
                                                title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-link"></i>
                </div>
                <h3>Nenhum vínculo cadastrado</h3>
                <p>Comece adicionando seu primeiro vínculo entre aplicação e provedor</p>
                <a asp-action="Create" class="btn btn-primary-modern btn-modern btn-icon mt-3">
                    <i class="fas fa-plus"></i>
                    <span>Cadastrar Primeiro Vínculo</span>
                </a>
            </div>
        }
    </div>
</div>

@* Modal de confirmação de exclusão *@
@await Html.PartialAsync("_DeleteConfirmationModal")

@section Scripts {
    <script src="~/js/delete-helper.js"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTables
            if ($('#aplicacoesProvedoresTable').length) {
                initDataTable('#aplicacoesProvedoresTable', {
                    order: [[0, 'asc']],
                    columnDefs: [
                        { orderable: false, targets: -1 } // Desabilitar ordenação na coluna de ações
                    ]
                });
            }

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
