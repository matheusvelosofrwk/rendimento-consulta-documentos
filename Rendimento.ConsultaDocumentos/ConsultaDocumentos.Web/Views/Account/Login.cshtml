@model ConsultaDocumentos.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
    <div class="col-md-5 col-lg-4">
        <div class="card-modern fade-in">
            <div class="card-body" style="padding: 2.5rem;">
                <!-- Logo/Header -->
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="fas fa-file-invoice" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h2 class="mb-2">Bem-vindo de Volta</h2>
                    <p class="text-muted">Faça login para acessar o sistema</p>
                </div>

                <form asp-action="Login" method="post" class="form-modern">
                    <div asp-validation-summary="All" class="alert alert-modern alert-danger mb-4"></div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope text-primary me-2"></i>E-mail
                        </label>
                        <div class="input-group input-group-modern">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autocomplete="email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock text-primary me-2"></i>Senha
                        </label>
                        <div class="input-group input-group-modern">
                            <span class="input-group-text">
                                <i class="fas fa-key"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-4">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Lembrar-me
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary-modern btn-modern btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                        </button>
                    </div>

                    <!-- Links -->
                    <div class="text-center">
                        <p class="text-muted mb-2">
                            <a href="#" class="text-primary text-decoration-none">
                                <i class="fas fa-question-circle me-1"></i>Esqueceu sua senha?
                            </a>
                        </p>
                        <div class="divider my-3"></div>
                        <p class="mb-0">
                            Não tem uma conta?
                            <a asp-action="Register" class="text-primary fw-semibold text-decoration-none">
                                <i class="fas fa-user-plus me-1"></i>Criar conta
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Footer Info -->
        <div class="text-center mt-4">
            <p class="text-muted small">
                <i class="fas fa-shield-alt me-1"></i>
                Seus dados estão protegidos e seguros
            </p>
        </div>
    </div>
</div>

<!-- Background decorativo (opcional) -->
<style>
    body {
        background: linear-gradient(135deg, #f8f9fc 0%, #e3e6f0 100%);
    }

    .card-modern {
        border: none;
        border-radius: 1rem;
    }

    .input-group-modern .form-control:focus {
        box-shadow: none;
        border-color: var(--primary-color);
    }

    .input-group-modern .form-control:focus + .input-group-text {
        border-color: var(--primary-color);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
