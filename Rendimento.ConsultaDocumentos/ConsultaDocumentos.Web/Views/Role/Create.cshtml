@model ConsultaDocumentos.Web.Models.RoleViewModel

@{
    ViewData["Title"] = "Criar Perfil";
}

<h1>Criar Perfil de Acesso</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Ex: Administrador, Consulta, Operador" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="form-text text-muted">Digite o nome do perfil de acesso</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Criar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
